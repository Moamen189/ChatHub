@model IEnumerable<testsignalr.Models.Topic>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Top_Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Top_Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Top_Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Top_Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Top_Id })
            </td>
        </tr>
    }

</table>
@section scripts{
<script src="~/Scripts/jquery.signalR-2.4.1.min.js"></script>
<script>
        $(function () {
            conn = $.hubConnection();
            prox = conn.createHubProxy("topic");
            conn.start().done(function () { alert("start") })

            prox.on("newtopic", function (id, name) {
                alert(name);
                $("table").append("<tr><td>" + name + "</td> <td> <a href='/edit/" + id + " '> edit</a></td></tr>");
            })

        }) 
    
    
    </script>
    }